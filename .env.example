# API Keys
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# RAG Configuration
TOP_K_RETRIEVAL=10
TOP_K_RERANK=5
HYBRID_ALPHA=0.5  # Weight for semantic vs keyword search (0-1)
USE_HYDE=false
HYDE_PROMPT_TEMPLATE="Write a detailed passage that would answer the following question: {query}"

# Vector Store
VECTOR_STORE_TYPE=chromadb  # chromadb or faiss
VECTOR_STORE_PATH=./data/vector_store
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Re-ranker
RERANKER_TYPE=cohere  # cohere or cross-encoder
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
