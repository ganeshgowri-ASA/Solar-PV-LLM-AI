# =============================================================================
# Solar PV LLM AI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys
# -----------------------------------------------------------------------------

# OpenAI API Key (for GPT models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google API Key (for Gemini/PaLM models)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Cohere API Key (for embeddings and reranking)
# Get your key at: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=

# -----------------------------------------------------------------------------
# Vector Database Configuration (Pinecone)
# -----------------------------------------------------------------------------

# Pinecone API Key
# Get your key at: https://app.pinecone.io/
PINECONE_API_KEY=

# Pinecone Environment/Region
# Common values: us-west-2, us-east-1, eu-west-1, asia-southeast-1
PINECONE_ENVIRONMENT=us-west-2

# Pinecone Index Name for Solar PV knowledge base
PINECONE_INDEX_NAME=pv-expert-knowledge

# Pinecone namespace (optional, for organizing vectors)
PINECONE_NAMESPACE=solar-pv-docs

# -----------------------------------------------------------------------------
# External Data APIs
# -----------------------------------------------------------------------------

# NREL (National Renewable Energy Laboratory) API Key
# Get your key at: https://developer.nrel.gov/signup/
# Used for: Solar resource data, PVWatts calculator, utility rates
NREL_API_KEY=

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/solar_pv_ai

# Redis URL (for caching and session management)
# Format: redis://[:password]@host:port/db_number
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Debug mode (set to False in production)
DEBUG=False

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Application environment: development, staging, production
ENVIRONMENT=development

# Secret key for JWT tokens and session encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# API Host and Port
API_HOST=0.0.0.0
API_PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# RAG Configuration
# -----------------------------------------------------------------------------

# Default embedding model
EMBEDDING_MODEL=text-embedding-3-small

# Default LLM model for chat
DEFAULT_LLM_MODEL=gpt-4-turbo-preview

# Maximum tokens for LLM responses
MAX_TOKENS=4096

# Temperature for LLM responses (0.0 - 1.0)
LLM_TEMPERATURE=0.7

# Number of documents to retrieve for RAG
RAG_TOP_K=5

# Chunk size for document processing
CHUNK_SIZE=1000

# Chunk overlap for document processing
CHUNK_OVERLAP=200

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------

# Rate limit requests per minute
RATE_LIMIT_PER_MINUTE=60

# Rate limit requests per hour
RATE_LIMIT_PER_HOUR=1000

# -----------------------------------------------------------------------------
# Monitoring & Observability (Optional)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=

# OpenTelemetry endpoint (optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable citation generation in responses
ENABLE_CITATIONS=True

# Enable query caching
ENABLE_CACHE=True

# Enable autonomous agent features
ENABLE_AUTONOMOUS_AGENT=False
