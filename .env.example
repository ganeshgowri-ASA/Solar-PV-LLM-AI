# Solar PV LLM AI - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Pinecone Vector Database Configuration
# =============================================================================

# Required: Your Pinecone API key
PINECONE_API_KEY=your_pinecone_api_key_here

# Index name (default: pv-expert-knowledge)
PINECONE_INDEX=pv-expert-knowledge

# Pinecone environment/region (default: us-west-2)
PINECONE_ENVIRONMENT=us-west-2

# Default namespace for operations
PINECONE_NAMESPACE=solar_pv_docs

# =============================================================================
# Roboflow Image Analysis Configuration (Optional)
# =============================================================================

# Roboflow API key for VI/EL/IR analysis
ROBOFLOW_API_KEY=your_roboflow_api_key_here

# Roboflow workspace name
ROBOFLOW_WORKSPACE=solar-pv-analysis

# Roboflow project name
ROBOFLOW_PROJECT=pv-defect-detection

# Model version to use
ROBOFLOW_MODEL_VERSION=1

# =============================================================================
# LLM Configuration (Optional - for response generation)
# =============================================================================

# OpenAI API key (if using GPT for response generation)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API key (if using Claude for response generation)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Application Settings
# =============================================================================

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
