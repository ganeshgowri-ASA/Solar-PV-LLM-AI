# Application Settings
APP_NAME=Solar PV LLM AI
APP_VERSION=1.0.0
APP_DESCRIPTION=Solar PV AI System with RAG and LLM
DEBUG=True
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security & Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY=your-api-key-here

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=solar_pv_documents

# RAG Configuration
MAX_RETRIEVAL_RESULTS=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Image Analysis Configuration
DEFECT_DETECTION_MODEL_PATH=./models/defect_detector.pth
IMAGE_UPLOAD_DIR=./data/uploads/images
MAX_IMAGE_SIZE_MB=10

# Document Ingestion Configuration
DOCUMENT_UPLOAD_DIR=./data/uploads/documents
SUPPORTED_FORMATS=pdf,docx,txt
MAX_DOCUMENT_SIZE_MB=50

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Database Configuration (Optional - for future use)
DATABASE_URL=sqlite:///./data/solar_pv.db

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
