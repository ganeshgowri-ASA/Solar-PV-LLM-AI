# ============================================
# Solar PV LLM AI - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file with real credentials

# ============================================
# Application Settings
# ============================================
APP_ENV=development
APP_PORT=8000
APP_HOST=0.0.0.0
DEBUG=true

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ============================================
# Anthropic Claude Configuration
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# ============================================
# Pinecone Vector Database Configuration
# ============================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=solar-pv-embeddings
PINECONE_DIMENSION=1536

# ============================================
# NREL (National Renewable Energy Laboratory) API
# ============================================
# Get your API key from: https://developer.nrel.gov/signup/
NREL_API_KEY=your_nrel_api_key_here
NREL_BASE_URL=https://developer.nrel.gov/api

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/solar_pv_db
POSTGRES_USER=solar_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=solar_pv_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Solar PV LLM AI

# ============================================
# Security & Authentication
# ============================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=3600
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# AI/ML Model Settings
# ============================================
EMBEDDING_MODEL=text-embedding-ada-002
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONTEXT_LENGTH=8000

# ============================================
# RAG (Retrieval Augmented Generation) Settings
# ============================================
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
ENABLE_CITATIONS=true

# ============================================
# Data Sources
# ============================================
DATA_REFRESH_INTERVAL=86400
ENABLE_AUTO_SYNC=false
