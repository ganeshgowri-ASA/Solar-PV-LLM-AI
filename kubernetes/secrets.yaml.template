# =============================================================================
# Kubernetes Secrets Template
# IMPORTANT: This is a template file. Create actual secrets using:
# kubectl create secret generic solar-pv-secrets --from-literal=key=value
#
# Or use sealed-secrets, external-secrets, or vault for production
# =============================================================================

apiVersion: v1
kind: Secret
metadata:
  name: solar-pv-secrets
  namespace: solar-pv-llm-ai
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://user:password@postgres:5432/solar_pv_db"
  DATABASE_PASSWORD: "REPLACE_ME"

  # Redis
  REDIS_URL: "redis://:password@redis:6379/0"
  REDIS_CACHE_URL: "redis://:password@redis:6379/1"
  REDIS_PASSWORD: "REPLACE_ME"

  # Security
  SECRET_KEY: "REPLACE_WITH_SECURE_RANDOM_STRING"
  JWT_ALGORITHM: "HS256"

  # Celery
  CELERY_BROKER_URL: "redis://:password@redis:6379/0"
  CELERY_RESULT_BACKEND: "redis://:password@redis:6379/0"

  # LLM APIs
  OPENAI_API_KEY: "sk-REPLACE_ME"
  ANTHROPIC_API_KEY: "sk-ant-REPLACE_ME"

  # External APIs
  WEATHER_API_KEY: "REPLACE_ME"
  NREL_API_KEY: "REPLACE_ME"
  VECTOR_DB_API_KEY: "REPLACE_ME"

  # Storage (if using S3)
  S3_BUCKET: "solar-pv-llm-ai"
  S3_ACCESS_KEY_ID: "REPLACE_ME"
  S3_SECRET_ACCESS_KEY: "REPLACE_ME"

  # Email
  SMTP_HOST: "smtp.gmail.com"
  SMTP_PORT: "587"
  SMTP_USER: "REPLACE_ME"
  SMTP_PASSWORD: "REPLACE_ME"

  # Monitoring
  SENTRY_DSN: "REPLACE_ME"

---
# =============================================================================
# How to create secrets in production:
# =============================================================================
#
# Option 1: Using kubectl
# kubectl create secret generic solar-pv-secrets \
#   --from-literal=DATABASE_PASSWORD=your_password \
#   --from-literal=OPENAI_API_KEY=your_key \
#   --namespace=solar-pv-llm-ai
#
# Option 2: Using Sealed Secrets
# kubeseal --format=yaml < secrets.yaml > sealed-secrets.yaml
# kubectl apply -f sealed-secrets.yaml
#
# Option 3: Using External Secrets Operator
# Create ExternalSecret resources pointing to AWS Secrets Manager, Vault, etc.
#
# =============================================================================
